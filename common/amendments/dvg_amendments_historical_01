# Dual Monarchy

amendment_states_general = {

	parent = law_landed_voting

	allowed_laws = {
		law_oligarchy
	}

	modifier = {
		country_legitimacy_govt_total_votes_add = 40
		country_aristocrats_voting_power_add = 50
		country_officers_voting_power_add = 25
		country_clergymen_voting_power_add = 25
		country_bureaucrats_voting_power_add = 25
		country_shopkeepers_voting_power_add = 25
		country_electoral_confidence_impact_mult = -0.5
	}

	possible = {
		country_has_primary_culture = cu:anglois
	}

	would_sponsor = {
		OR = {
			is_interest_group_type = ig_landowners
			is_interest_group_type = ig_industrialists
			has_ideology = ideology:ideology_dvg_anglois
		}
	}

	ai_will_revoke = {
		always = no
	}

	can_repeal = {
		legitimacy >= legitimacy_to_repeal_amendment
	}

	amendment_activism_multiplier = 0.5
}

amendment_special_laws_on_cultural_autonomy = {
	parent = law_subjecthood

	allowed_laws = {
		law_subjecthood
	}

	modifier = {
		country_british_cultural_acceptance_add = 10
        country_french_cultural_acceptance_add = 5
		country_fervor_target_british_add = -10
        country_fervor_target_french_add = -5
		interest_group_ig_landowners_approval_add = -2
		interest_group_ig_rural_folk_approval_add = 1
	}

    possible = {
        country_has_primary_culture = cu:anglois
    }

	would_sponsor = {
		AND = {
			exists = scope:approval
			scope:approval > 0
		}
	}

	ai_will_revoke = {
		always = yes
	}

	can_repeal = {
		legitimacy >= legitimacy_to_repeal_amendment
	}

	on_activate = {
		if = {
			limit = {
				any_scope_state = {
					state_region = s:STATE_EAST_ANGLIA
				}
                any_scope_state = {
					state_region = s:STATE_MIDLANDS
				}
                any_scope_state = {
					state_region = s:STATE_YORKSHIRE
				}
                any_scope_state = {
					state_region = s:STATE_LANCASHIRE
				}
                any_scope_state = {
					state_region = s:STATE_LIMOUSIN
				}
			}
			random_scope_state = {
				limit = {
				any_scope_state = {
					state_region = s:STATE_EAST_ANGLIA
				}
                any_scope_state = {
					state_region = s:STATE_MIDLANDS
				}
                any_scope_state = {
					state_region = s:STATE_YORKSHIRE
				}
                any_scope_state = {
					state_region = s:STATE_LANCASHIRE
				}
                any_scope_state = {
					state_region = s:STATE_LIMOUSIN
				}
				add_modifier = dvg_state_autonomy_dua
			}
		}
	}

	on_deactivate = {
		if = {
			limit = {
				any_scope_state = {
					state_region = s:STATE_EAST_ANGLIA
				}
                any_scope_state = {
					state_region = s:STATE_MIDLANDS
				}
                any_scope_state = {
					state_region = s:STATE_YORKSHIRE
				}
                any_scope_state = {
					state_region = s:STATE_LANCASHIRE
				}
                any_scope_state = {
					state_region = s:STATE_LIMOUSIN
				}
			}
			random_scope_state = {
				limit = {
				any_scope_state = {
					state_region = s:STATE_EAST_ANGLIA
				}
                any_scope_state = {
					state_region = s:STATE_MIDLANDS
				}
                any_scope_state = {
					state_region = s:STATE_YORKSHIRE
				}
                any_scope_state = {
					state_region = s:STATE_LANCASHIRE
				}
                any_scope_state = {
					state_region = s:STATE_LIMOUSIN
				}
				remove_modifier = dvg_state_autonomy_dua
			}
			add_radicals = {
				culture = cu:british
				value = {
					add = huge_radicals
				}
			}
		}
	}

	amendment_activism_multiplier = 0.50
}

amendment_full_federal_autonomy= {

	parent = law_provincial_councils

	allowed_laws = {
		law_provincial_councils
        law_elected_bureaucrats
	}

	modifier = {
		country_legitimacy_govt_total_votes_add = 50
		country_aristocrats_voting_power_add = -20
		country_bureaucrats_voting_power_add = 25
		country_shopkeepers_voting_power_add = 25
        country_bureaucracy_mult = 0.15
        country_authority_mult = -0.10
		country_electoral_confidence_impact_mult = 0.5
	}

	possible = {
		country_has_primary_culture = cu:anglois
	}

	would_sponsor = {
		OR = {
			is_interest_group_type = ig_petty_bourgeoisie
			is_interest_group_type = ig_industrialists
		}
	}

	ai_will_revoke = {
		always = no
	}

	can_repeal = {
		legitimacy >= legitimacy_to_repeal_amendment
	}

	amendment_activism_multiplier = 0.5
}

amendment_dutch_autonomy = {
	parent = law_subjecthood

	allowed_laws = {
		law_subjecthood
	}

	modifier = {
		country_dutch_cultural_acceptance_add = 20
		country_fervor_target_dutch_add = -10
		interest_group_ig_landowners_approval_add = -1
		interest_group_ig_intelligentsia_approval_add = 1
	}

	possible = {
		country_has_primary_culture = cu:burgundian
	}

	would_sponsor = {
		AND = {
			exists = scope:approval
			scope:approval > 0
		}
	}

	ai_will_revoke = {
		always = no
	}

	can_repeal = {
		legitimacy >= legitimacy_to_repeal_amendment
	}

	on_activate = {
		if = {
			limit = {
				any_scope_state = {
					state_region = s:STATE_HOLLAND
				}
				any_scope_state = {
					state_region = s:STATE_FRIESLAND
				}
				any_scope_state = {
					state_region = s:STATE_GELRE
				}
				any_scope_state = {
					state_region = s:STATE_WALLONIA
				}
				any_scope_state = {
					state_region = s:STATE_FLANDERS
				}
			}
			random_scope_state = {
				limit = {
					state_region = s:STATE_HOLLAND
				}
				any_scope_state = {
					state_region = s:STATE_FRIESLAND
				}
				any_scope_state = {
					state_region = s:STATE_GELRE
				}
				any_scope_state = {
					state_region = s:STATE_WALLONIA
				}
				any_scope_state = {
					state_region = s:STATE_FLANDERS
				}
				}
				add_modifier = dvg_dutch_autonomy
			}
		}
	}

	on_deactivate = {
		if = {
			limit = {
				any_scope_state = {
					state_region = s:STATE_HOLLAND
				}
				any_scope_state = {
					state_region = s:STATE_FRIESLAND
				}
				any_scope_state = {
					state_region = s:STATE_GELRE
				}
				any_scope_state = {
					state_region = s:STATE_WALLONIA
				}
				any_scope_state = {
					state_region = s:STATE_FLANDERS
				}
			}
			random_scope_state = {
				limit = {
					state_region = s:STATE_HOLLAND
				}
				any_scope_state = {
					state_region = s:STATE_FRIESLAND
				}
				any_scope_state = {
					state_region = s:STATE_GELRE
				}
				any_scope_state = {
					state_region = s:STATE_WALLONIA
				}
				any_scope_state = {
					state_region = s:STATE_FLANDERS
				}
				}
				remove_modifier = dvg_dutch_autonomy
			}
			add_radicals = {
				culture = cu:dutch
				value = {
					add = huge_radicals
				}
			}
		}
	}

	amendment_activism_multiplier = 0.50
}