# Dual Monarchy

amendment_states_general = {

	parent = law_landed_voting

	allowed_laws = {
		law_oligarchy
	}

	modifier = {
		country_legitimacy_govt_total_votes_add = 40
		country_aristocrats_voting_power_add = 50
		country_officers_voting_power_add = 25
		country_clergymen_voting_power_add = 25
		country_bureaucrats_voting_power_add = 25
		country_shopkeepers_voting_power_add = 25
		country_electoral_confidence_impact_mult = -0.5
	}

	possible = {
		country_has_primary_culture = cu:anglois
	}

	would_sponsor = {
		OR = {
			is_interest_group_type = ig_landowners
			is_interest_group_type = ig_industrialists
			has_ideology = ideology:ideology_dvg_anglois
		}
	}

	ai_will_revoke = {
		always = no
	}

	can_repeal = {
		legitimacy >= legitimacy_to_repeal_amendment
	}

	amendment_activism_multiplier = 0.5
}

amendment_special_laws_on_cultural_autonomy = {
	parent = law_subjecthood

	allowed_laws = {
		law_subjecthood
	}

	modifier = {
		country_british_cultural_acceptance_add = 10
        country_french_cultural_acceptance_add = 5
		country_fervor_target_british_add = -10
        country_fervor_target_french_add = -5
		interest_group_ig_landowners_approval_add = -2
		interest_group_ig_rural_folk_approval_add = 1
	}

    possible = {
        country_has_primary_culture = cu:anglois
    }

	would_sponsor = {
		AND = {
			exists = scope:approval
			scope:approval > 0
		}
	}

	ai_will_revoke = {
		always = yes
	}

	can_repeal = {
		legitimacy >= legitimacy_to_repeal_amendment
	}

	on_activate = {
		if = {
			limit = {
				any_scope_state = {
					state_region = s:STATE_EAST_ANGLIA
				}
                any_scope_state = {
					state_region = s:STATE_MIDLANDS
				}
                any_scope_state = {
					state_region = s:STATE_YORKSHIRE
				}
                any_scope_state = {
					state_region = s:STATE_LANCASHIRE
				}
                any_scope_state = {
					state_region = s:STATE_LIMOUSIN
				}
			}
			random_scope_state = {
				limit = {
				any_scope_state = {
					state_region = s:STATE_EAST_ANGLIA
				}
                any_scope_state = {
					state_region = s:STATE_MIDLANDS
				}
                any_scope_state = {
					state_region = s:STATE_YORKSHIRE
				}
                any_scope_state = {
					state_region = s:STATE_LANCASHIRE
				}
                any_scope_state = {
					state_region = s:STATE_LIMOUSIN
				}
				add_modifier = dvg_state_autonomy_dua
			}
		}
	}

	on_deactivate = {
		if = {
			limit = {
				any_scope_state = {
					state_region = s:STATE_EAST_ANGLIA
				}
                any_scope_state = {
					state_region = s:STATE_MIDLANDS
				}
                any_scope_state = {
					state_region = s:STATE_YORKSHIRE
				}
                any_scope_state = {
					state_region = s:STATE_LANCASHIRE
				}
                any_scope_state = {
					state_region = s:STATE_LIMOUSIN
				}
			}
			random_scope_state = {
				limit = {
				any_scope_state = {
					state_region = s:STATE_EAST_ANGLIA
				}
                any_scope_state = {
					state_region = s:STATE_MIDLANDS
				}
                any_scope_state = {
					state_region = s:STATE_YORKSHIRE
				}
                any_scope_state = {
					state_region = s:STATE_LANCASHIRE
				}
                any_scope_state = {
					state_region = s:STATE_LIMOUSIN
				}
				remove_modifier = dvg_state_autonomy_dua
			}
			add_radicals = {
				culture = cu:british
				value = {
					add = huge_radicals
				}
			}
		}
	}

	amendment_activism_multiplier = 0.50
}