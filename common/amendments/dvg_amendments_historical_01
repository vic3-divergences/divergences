amendment_states_general = {

	parent = law_landed_voting

	allowed_laws = {
		law_oligarchy
	}

	modifier = {
		country_legitimacy_govt_total_votes_add = 40
		country_aristocrats_voting_power_add = 50
		country_officers_voting_power_add = 25
		country_clergymen_voting_power_add = 25
		country_bureaucrats_voting_power_add = 25
		country_shopkeepers_voting_power_add = 25
		country_electoral_confidence_impact_mult = -0.5
	}

	possible = {
		country_has_primary_culture = cu:anglois
	}

	would_sponsor = {
		OR = {
			is_interest_group_type = ig_landowners
			is_interest_group_type = ig_industrialists
			has_ideology = ideology:ideology_dvg_anglois
		}
	}

	ai_will_revoke = {
		always = no
	}

	can_repeal = {
		legitimacy >= legitimacy_to_repeal_amendment
	}

	amendment_activism_multiplier = 0.5
}